<h2>Ready to devour:</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
    <div>{{this.burger_name}}<button class="devour-burger" data-id="{{this.id}}">Devour!</button></div>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured:</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
    <div>
        <div>
            {{this.burger_name}}
        </div>
    </div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger:</h2>
<form action="/api/burgers" method="POST">
    <input type="text" id="burger-name" name="burger_name" placeholder="Type the name of a new burger">
</form>
<button id="add-burger">Add!</button>

<script type="text/javascript">

    $("#add-burger").on("click", function(){
        $.ajax({
            url: "/api/burgers",
            type: "post",
            data: {burger_name: $("#burger-name").val().trim()}
        }).then(function(data){
            console.log(data);
            location.reload();
        })
    });

    $(document).on("click", ".devour-burger", function(){
        var clickedID = $(this).attr("data-id");
        $.ajax({
            url: "/api/burgers/" + clickedID,
            type: "put",
            data: {id: clickedID}
        }).then(function(data){
            console.log(data);
            location.reload();
        })
    });

</script>